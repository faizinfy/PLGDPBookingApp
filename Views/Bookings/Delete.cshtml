@model PLGDPBookingApp.Models.Booking

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Details Tempahan</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Bookings")">Tempahan</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Tempahan</h3>
                    </div>
                    <form role="form" method="post" action="Edit">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.createddate)

                        <div class="card-body">
                            <div class="form-group">
                                <label>Nama</label>
                                <input readonly type="text" class="form-control" name="name" placeholder="Nama" value="@Model.name">
                            </div>
                            <div class="form-group">
                                <label>Nombor Telefon</label>
                                <input readonly type="text" class="form-control" name="mobileno" placeholder="Nombor Telefon" value="@Model.mobileno">
                            </div>
                            <div class="form-group">
                                <label>Tempat / Lokasi</label>
                                <select disabled class="form-control select2" style="width: 100%;" name="locationname" placeholder="Nombor Telefon">
                                    <option value=""></option>
                                    <option value="Bilik Seminar" @(Model.locationname == "Bilik Seminar" ? "selected" : "")>Bilik Seminar</option>
                                    <option value="Dewan" @(Model.locationname == "Dewan" ? "selected" : "")>Dewan</option>
                                    <option value="Rumah" @(Model.locationname == "Rumah" ? "selected" : "")>Rumah</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Tarikh & Masa</label>
                                <input type="hidden" class="form-control" name="startdate" id="startdate" value="@Model.startdate">
                                <input type="hidden" class="form-control" name="enddate" id="enddate" value="@Model.enddate">

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="far fa-clock"></i></span>
                                    </div>
                                    <input readonly type="text" class="form-control float-right" id="reservationtime" name="testdate" placeholder="Tarikh & Masa" value="@Model.startdate - @Model.enddate">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Tujuan</label>
                                <input readonly type="text" class="form-control" name="purpose" placeholder="Tujuan" value="@Model.purpose">
                            </div>
                            <div class="form-group">
                                <label>Sektor / Unit</label>
                                <input readonly type="text" class="form-control" name="sector" placeholder="Sektor / Unit" value="@Model.sector">
                            </div>
                            <div class="form-group">
                                <label>Bilangan Perserta</label>
                                <input readonly type="number" class="form-control" name="noofparticipant" placeholder="Bilangan Perserta" value="@Model.noofparticipant">
                            </div>
                            <div class="form-group">
                                <label>Keperluan</label>
                                <div class="form-group row">
                                    <span class="col-sm-4 col-form-label">Internet</span>
                                    <div class="col-sm-8">
                                        <input readonly type="checkbox" name="isinternet" value="True" @(Model.isinternet == true ? "checked" : "") data-bootstrap-switch data-on-text="Ya" data-off-text="Tidak">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <span class="col-sm-4 col-form-label">PA Sistem</span>
                                    <div class="col-sm-8">
                                        <input readonly type="checkbox" name="ispasystem" value="True" @(Model.ispasystem == true ? "checked" : "") data-bootstrap-switch data-on-text="Ya" data-off-text="Tidak">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <span class="col-sm-4 col-form-label">LCD Projecktor</span>
                                    <div class="col-sm-8">
                                        <input readonly type="checkbox" name="islcdprojector" value="True" @(Model.islcdprojector == true ? "checked" : "") data-bootstrap-switch data-on-text="Ya" data-off-text="Tidak">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

